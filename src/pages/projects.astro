---
// src/pages/projects.astro
import BaseLayout from '@/layouts/BaseLayout.astro';
import ProjectCard from '@/components/project/ProjectCard.astro';
import { getAllProjects } from '@/lib/projects';

const projects = await getAllProjects();
const currentFilter = 'all';
---

<BaseLayout title="Wu | 开源项目s" description="我的开源项目，包含各种工具、库和应用程序。">
  <div class="main-container">
    <header class="page-header animate-fade-in-down">
      <h1 class="page-title">Open Source</h1>
      <p class="page-subtitle">我的开源项目 · 分享与协作</p>
    </header>

    <div class="projects-header animate-fade-in-up" style="animation-delay: 0.1s">
      <span class="projects-count">{projects.length} 个项目</span>
      <div class="projects-filter">
        <button class="filter-btn active" data-filter="all">全部</button>
        <button class="filter-btn" data-filter="tools">工具库</button>
        <button class="filter-btn" data-filter="web">Web应用</button>
        <button class="filter-btn" data-filter="ai">AI/ML</button>
        <button class="filter-btn" data-filter="miniprogram">小程序</button>
      </div>
    </div>

    <div class="projects-grid">
      {projects.map((project, index) => (
        <ProjectCard
          project={project}
          class="animate-fade-in-up"
          style={`animation-delay: ${0.2 + index * 0.05}s`}
        />
      ))}
    </div>
  </div>
</BaseLayout>

<style>
  .projects-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 32px;
  }

  .projects-count {
    font-family: 'JetBrains Mono', monospace;
    font-size: 14px;
    color: var(--gray-500);
  }

  .projects-filter {
    display: flex;
    gap: 12px;
  }

  .filter-btn {
    padding: 8px 16px;
    font-family: 'JetBrains Mono', monospace;
    font-size: 13px;
    color: var(--gray-500);
    background: var(--white);
    border: 1px solid var(--gray-200);
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .filter-btn:hover {
    border-color: var(--gray-300);
    color: var(--black);
  }

  .filter-btn.active {
    background: var(--black);
    color: var(--white);
    border-color: var(--black);
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24px;
  }

  @media (max-width: 1024px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }

    .projects-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 16px;
    }

    .projects-filter {
      flex-wrap: wrap;
    }
  }
</style>

<script>
  const filterBtns = document.querySelectorAll('.filter-btn');
  const projectCards = document.querySelectorAll('.project-card');

  filterBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const filter = btn.getAttribute('data-filter');

      filterBtns.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');

      projectCards.forEach(card => {
        const category = card.getAttribute('data-category');

        if (filter === 'all' || category === filter) {
          (card as HTMLElement).style.display = 'block';
          (card as HTMLElement).style.opacity = '1';
        } else {
          (card as HTMLElement).style.display = 'none';
          (card as HTMLElement).style.opacity = '0';
        }
      });

      const visibleCards = Array.from(projectCards).filter(
        card => (card as HTMLElement).style.display !== 'none',
      );
      document.querySelector('.projects-count')!.textContent = visibleCards.length + ' 个项目';
    });
  });
</script>
