---
// src/pages/links.astro
import BaseLayout from '@/layouts/BaseLayout.astro';
import LinkCard from '@/components/link/LinkCard.astro';
import { getAllLinks } from '@/lib/links';

const links = await getAllLinks();
---

<BaseLayout title="链接 | Links" description="我的社交链接，包含GitHub、Twitter、邮箱等。">
  <div class="main-container">
    <header class="links-header animate-fade-in-down">
      <h1 class="links-title">Links</h1>
      <p class="links-subtitle">保持连接 · 分享交流</p>
    </header>

    <div class="links-grid">
      {links.map((link, index) => (
        <LinkCard
          link={link}
          class="animate-fade-in-up"
          style={`animation-delay: ${0.1 + index * 0.05}s`}
        />
      ))}
    </div>
  </div>
</BaseLayout>

<style>
  .links-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .links-title {
    font-size: 48px;
    font-weight: 300;
    margin-bottom: 16px;
  }

  .links-subtitle {
    font-size: 16px;
    color: var(--gray-500);
    font-family: 'JetBrains Mono', monospace;
  }

  .links-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
  }

  @media (max-width: 1024px) {
    .links-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .links-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
