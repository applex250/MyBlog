---
// src/components/project/ProjectCard.astro
const { project } = Astro.props;
import { getLanguageColor } from '@/lib/utils';
---

<a href={project.url} target="_blank" rel="noopener noreferrer" class="project-card" data-category={project.category}>
  <div class="project-header">
    <div class="project-title">
      <div class="project-icon">
        <svg class="hand-drawn" viewBox="0 0 20 20" fill="none" stroke={project.languageColor || '#737373'}>
          <circle cx="10" cy="10" r="9" class="hand-drawn" />
          <path d="M7 10l3 3 3-3" stroke-width="1.5" class="hand-drawn" />
        </svg>
      </div>
      <span>{project.title}</span>
    </div>
    <div class="project-star">
      <svg class="hand-drawn" viewBox="0 0 24 24" fill="none" stroke="currentColor">
        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
      </svg>
      <span>{project.stars}</span>
    </div>
  </div>
  <p class="project-description">{project.description}</p>
  <div class="project-meta">
    <div class="meta-item">
      <span class="language-dot" style={`background: ${project.languageColor || '#737373'}`}></span>
      <span>{project.language}</span>
    </div>
    <div class="meta-item">
      <svg class="hand-drawn" viewBox="0 0 24 24" fill="none" stroke="currentColor">
        <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z" />
        <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z" />
      </svg>
      <span>{project.license}</span>
    </div>
    <div class="meta-item">
      <svg class="hand-drawn" viewBox="0 0 24 24" fill="none" stroke="currentColor">
        <circle cx="12" cy="12" r="9" />
        <polyline points="12 7 12 12 15 15" />
      </svg>
      <span>{project.lastUpdated}</span>
    </div>
  </div>
</a>
